    "def batch_generator(X, y, batch_size):\n",
    "    np.random.seed(42)\n",
    "    perm = np.random.permutation(len(X))\n",
    "    for i in range(0, len(X), batch_size):\n",
    "        batch_indexes = perm[i:i+batch_size]\n",
    "        yield (X[batch_indexes], y[batch_indexes] )"
   ]
  }
